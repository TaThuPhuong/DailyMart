<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="net.fpoly.dailymart.view.tab.invoice.InvoiceViewModel" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="InvoiceViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_back_black"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:gravity="center_vertical"
                    android:text="Hóa đơn"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_toolbar"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="28dp">

                <EditText
                    android:id="@+id/ed_search_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/imv_add"
                    android:background="@drawable/bg_ed_search_task"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:hint="Mã hóa đơn,nhân viên..."
                    android:paddingHorizontal="10dp"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imv_add"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_add"
                    android:visibility="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_EXPORT ? View.VISIBLE : View.GONE}" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/layout_search"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="26dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/layout_assigned"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(InvoiceViewModel.TAB_EXPORT)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_assigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Bán hàng"
                        android:textColor="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_EXPORT ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_assigned"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_EXPORT ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_finish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(InvoiceViewModel.TAB_IMPORT)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Nhập hàng"
                        android:textColor="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_IMPORT ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_finish"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_IMPORT ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_deduction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(InvoiceViewModel.TAB_DEDUCTION)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Trừ tiền"
                        android:textColor="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_DEDUCTION ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_deduction"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_DEDUCTION ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium }" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                android:visibility="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_EXPORT ? View.VISIBLE : View.GONE}"
                app:items="@{viewModel.invoiceSell}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                android:visibility="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_IMPORT ? View.VISIBLE : View.GONE}"
                app:items="@{viewModel.invoiceImport}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_deduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                android:visibility="@{viewModel.openTabReceipt == InvoiceViewModel.TAB_DEDUCTION ? View.VISIBLE : View.GONE}"
                app:items="@{viewModel.invoiceDeduction}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/layout_filter"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{viewModel.isShowEmptyList ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_empty_list" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/imbplexsans_regular"
                    android:text="@string/empty_list"
                    android:textColor="@color/gray_medium"
                    android:textSize="16sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_filter"
                android:onClick="@{() -> null}"
                android:orientation="vertical"
                android:visibility="@{viewModel.isLoading() ? View.VISIBLE : View.GONE}">

                <androidx.core.widget.ContentLoadingProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>