<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="net.fpoly.dailymart.view.task.TaskViewModel" />

        <variable
            name="viewModel"
            type="TaskViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@drawable/ic_back_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/imbplexsans_medium"
                android:gravity="center_vertical"
                android:text="Giao việc"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_toolbar"
            android:layout_marginHorizontal="30dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/imv_add"
                android:background="@drawable/bg_ed_search_task">

                <EditText
                    android:id="@+id/ed_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/imv_clear"
                    android:background="@color/no_color"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:hint="Việc, người nhận,..."
                    android:maxLines="1"
                    android:paddingHorizontal="10dp" />

                <ImageView
                    android:id="@+id/imv_clear"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imv_add"
                set_visible="@{viewModel.role}"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_add" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/layout_search"
            android:layout_marginHorizontal="60dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/layout_assigned"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{()->viewModel.onOpenTab(1)}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_assigned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:text="@{viewModel.role==true ? @string/da_giao : @string/da_nhan}"
                    android:textColor="@{viewModel.tabAssignedOpen==false ? @color/gray_medium : @color/pink_primary}"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/line_assigned"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@{viewModel.tabAssignedOpen==false ? @drawable/bg_line_gray_medium : @drawable/bg_line_pink_primary}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{()->viewModel.onOpenTab(2)}"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:text="Đã hoàn thành"
                    android:textColor="@{viewModel.tabAssignedOpen==true ? @color/gray_medium : @color/pink_primary}"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/line_finish"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@{viewModel.tabAssignedOpen==true ? @drawable/bg_line_gray_medium : @drawable/bg_line_pink_primary}" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_filter">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_list_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/gray_light"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="Danh sách trống"
                android:textColor="@color/red_FF444C"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
