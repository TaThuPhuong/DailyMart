<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_white_rd_top_10">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/imbplexsans_medium"
        android:paddingTop="26dp"
        android:paddingStart="26dp"
        android:text="Hoàn thành công việc"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingTop="26dp"
        android:paddingEnd="26dp"
        android:src="@drawable/ic_close_square" />

    <TextView
        android:id="@+id/ed_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_close"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="18dp"
        android:text="Bạn có chắc muốn xác nhận hoàn thành công việc này không?"
        android:textColor="@color/gray_medium"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ed_comment"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="12dp"
        android:layout_below="@+id/ed_category_name"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/imbplexsans_regular"
        android:background="@drawable/bg_ed_search_task"
        android:hint="Nhận xét"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/ed_comment"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_red_ff44c_rd_8"
        android:drawablePadding="10dp"
        android:fontFamily="@font/imbplexsans_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="Xác nhận"
        android:textColor="@color/pink_primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/btn_confirm"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="26dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/imbplexsans_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="Hủy bỏ"
        android:textColor="@color/gray_light"
        android:textSize="16sp" />
</RelativeLayout>