<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="net.fpoly.dailymart.data.model.Product" />

        <import type="android.view.View" />

        <import type="net.fpoly.dailymart.utils.ConvertUtilsKt" />

        <variable
            name="viewModel"
            type="net.fpoly.dailymart.view.detailinvoice.DetailInvoiceViewModel" />

        <variable
            name="invoice"
            type="net.fpoly.dailymart.data.model.DetailInvoice" />

        <variable
            name="index"
            type="java.lang.Integer" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imbplexsans_semibold"
                    android:text="@{ConvertUtilsKt.takeLastId(invoice.product.id)}"

                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:text="@{invoice.product.name}"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_remove_detail_invoice"
                    android:visibility="@{viewModel.isRefund() == true ? View.VISIBLE : View.GONE}" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:background="@android:color/transparent"
                    android:enabled="@{viewModel.isRefund()}"
                    android:fontFamily="@font/imbplexsans_regular"
                    android:inputType="number"
                    android:minWidth="6dp"
                    android:text="@{ConvertUtilsKt.convertTotalInvoiceNumber(invoice.quantityProduct)}"
                    android:textColor="@color/gray_medium"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_detail_invoice"
                    android:visibility="@{viewModel.isRefund() == true ? View.VISIBLE : View.GONE}" />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/imbplexsans_regular"
                android:gravity="end|center_vertical"
                android:text="@{ConvertUtilsKt.convertTotalInvoiceNumber(invoice.unitPrice)}"
                android:textColor="@color/gray_medium"
                android:textSize="12sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/imbplexsans_semibold"
                android:gravity="center_vertical|end"
                android:text="@{ConvertUtilsKt.convertTotalInvoiceNumber(invoice.totalPrice)}"
                android:textColor="@color/gray_medium"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:contentDescription="@string/imagedescription"
            android:src="@drawable/line_dash_invoice" />
    </LinearLayout>

</layout>