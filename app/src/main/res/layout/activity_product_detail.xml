<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="net.fpoly.dailymart.view.products.detail_product.ProductDetailViewModel" />

        <variable
            name="viewModel"
            type="net.fpoly.dailymart.view.products.detail_product.ProductDetailViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_tool_bar"
            android:paddingTop="58dp">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@drawable/ic_back_white"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/imbplexsans_medium"
                android:gravity="center_vertical"
                android:text="Thông tin sản phẩm"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="26dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/bg_white_rd_8"
                        android:elevation="5dp"
                        android:hint="Barcode"
                        android:padding="10dp"
                        android:textColor="@color/gray_medium"
                        android:textColorHint="@color/gray_light"
                        android:textSize="16sp" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/layout_id"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_rd_8"
                    android:elevation="5dp"
                    android:hint="Tên sản phẩm "
                    android:padding="10dp"
                    android:textColor="@color/gray_medium"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_rd_8"
                    android:elevation="5dp"
                    android:hint="Số lượng"
                    android:padding="10dp"
                    android:textColor="@color/gray_medium"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_quantity"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_rd_8"
                    android:elevation="5dp"
                    android:hint="Nhà phân phối"
                    android:padding="10dp"
                    android:textColor="@color/gray_medium"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_supplier"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_rd_8"
                    android:elevation="5dp"
                    android:hint="Ngành hàng "
                    android:padding="10dp"
                    android:textColor="@color/gray_medium"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/layout_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_category"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_import_price"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="26dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_rd_8"
                        android:elevation="5dp"
                        android:hint="Giá nhập"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/gray_medium"
                        android:textColorHint="@color/gray_light"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_sell_price"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="26dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_white_rd_8"
                        android:elevation="5dp"
                        android:hint="Giá bán"
                        android:inputType="numberDecimal"
                        android:padding="10dp"
                        android:textColor="@color/gray_medium"
                        android:textColorHint="@color/gray_light"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/layout_price"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_white_rd_8"
                    android:elevation="5dp"
                    android:hint="Đơn vị tính"
                    android:padding="10dp"
                    android:textColor="@color/gray_medium"
                    android:textColorHint="@color/gray_light"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_unit"
                    android:layout_marginHorizontal="26dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/imv_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_below="@+id/cv_image"
                    android:layout_marginHorizontal="26dp"
                    android:layout_marginVertical="40dp"
                    android:background="@drawable/bg_btn"
                    android:fontFamily="@font/imbplexsans_regular"
                    android:gravity="center"
                    android:text="Đóng"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>