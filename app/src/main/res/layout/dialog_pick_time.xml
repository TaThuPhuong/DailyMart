<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/imbplexsans_medium"
        android:padding="10dp"
        android:text="Chọn thời gian"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/bg_popup_set_target_picker" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ibmplexsans_bold"
            android:text=":"
            android:textColor="@color/blue_002F22"
            android:textSize="@dimen/_18sdp"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <net.fpoly.dailymart.extention.custom_view.NumberPickView
                android:id="@+id/npv_popup_pick1"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_120sdp"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShowCenterBg="false"
                app:npv_ShowCount="3"
                app:npv_ShowDivider="false"
                app:npv_TextColorNormal="#4D58716A"
                app:npv_TextColorSelected="@color/gray_primary"
                app:npv_TextSizeNormal="@dimen/_12sdp"
                app:npv_TextSizeSelected="@dimen/_15sdp"
                app:npv_WrapSelectorWheel="false" />

            <net.fpoly.dailymart.extention.custom_view.NumberPickView
                android:id="@+id/npv_popup_pick2"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShowCenterBg="false"
                app:npv_ShowCount="3"
                app:npv_ShowDivider="false"
                app:npv_TextColorNormal="#4D58716A"
                app:npv_TextColorSelected="@color/gray_primary"
                app:npv_TextSizeNormal="@dimen/_12sdp"
                app:npv_TextSizeSelected="@dimen/_15sdp"
                app:npv_WrapSelectorWheel="false" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/imbplexsans_medium"
        android:gravity="center"
        android:text="Chọn"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>