<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="net.fpoly.dailymart.view.tab.receipt.ReceiptViewModel" />
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="ReceiptViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingVertical="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:src="@drawable/ic_back_black"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:gravity="center_vertical"
                    android:text="Hóa đơn"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_toolbar"
                android:layout_marginTop="28dp"
                android:layout_marginHorizontal="24dp">

                <EditText
                    android:id="@+id/ed_search_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@+id/imv_add"
                    android:background="@drawable/bg_ed_search_task"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:hint="Mã hóa đơn,nhân viên..."
                    android:paddingHorizontal="10dp" />

                <ImageView
                    android:id="@+id/imv_add"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_add" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="26dp"
                android:layout_height="50dp"
                android:layout_below="@+id/layout_search"
                android:layout_marginTop="28dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/layout_assigned"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(ReceiptViewModel.TAB_SELL)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_assigned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Bán hàng"
                        android:textColor="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_SELL ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_assigned"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_SELL ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_finish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(ReceiptViewModel.TAB_IMPORT)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Nhập hàng"
                        android:textColor="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_IMPORT ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_finish"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_IMPORT ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium}" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_deduction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{()->viewModel.onOpenTab(ReceiptViewModel.TAB_DEDUCTION)}"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:fontFamily="@font/imbplexsans_medium"
                        android:text="Trừ tiền"
                        android:textColor="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_DEDUCTION ? @color/pink_primary : @color/gray_medium}"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_deduction"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_DEDUCTION ? @drawable/bg_line_pink_primary : @drawable/bg_line_gray_medium }" />
                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                app:items="@{viewModel.invoiceSell}"
                android:visibility="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_SELL ? View.VISIBLE : View.GONE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                app:items="@{viewModel.invoiceImport}"
                android:visibility="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_IMPORT ? View.VISIBLE : View.GONE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_deduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_filter"
                android:layout_marginTop="14dp"
                app:items="@{viewModel.invoiceDeduction}"
                android:visibility="@{viewModel.openTabReceipt == ReceiptViewModel.TAB_DEDUCTION ? View.VISIBLE : View.GONE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>



    </RelativeLayout>
</layout>