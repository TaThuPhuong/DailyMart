<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="net.fpoly.dailymart.view.task.add_new.AddTaskViewModel" />

        <variable
            name="viewModel"
            type="net.fpoly.dailymart.view.task.add_new.AddTaskViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="58dp">

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@drawable/ic_back_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/imbplexsans_medium"
                android:gravity="center_vertical"
                android:text="Công việc"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_banner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_banner_add_task" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imv_banner"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/imbplexsans_regular"
                    android:text="Thêm công việc"
                    android:textAllCaps="true"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/ed_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginVertical="5dp"
                    android:hint="Tên công việc"
                    android:padding="8dp"
                    android:textColor="@color/gray_medium"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ed_title"
                    android:layout_marginVertical="5dp"
                    android:hint="Nhập tên, mã nhân viên..."
                    android:padding="8dp"
                    android:textColor="@color/gray_medium"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_list_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ed_name"
                    android:background="@drawable/bg_white_bottom_rd_10"
                    android:elevation="5dp"
                    android:paddingHorizontal="10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <LinearLayout
                    android:id="@+id/layout_time_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ed_name"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_calander_gray"
                        android:drawablePadding="10dp"
                        android:hint="Bắt đầu"
                        android:padding="8dp"
                        android:textColor="@color/gray_medium"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_time_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_time_start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_time_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_calander_gray"
                        android:drawablePadding="10dp"
                        android:hint="Kết thúc"
                        android:padding="8dp"
                        android:textColor="@color/gray_medium"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_medium" />
                </LinearLayout>

                <EditText
                    android:id="@+id/ed_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_time_end"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/bg_ed_search_task"
                    android:drawablePadding="10dp"
                    android:gravity="top"
                    android:hint="Mô tả ..."
                    android:minLines="4"
                    android:padding="8dp"
                    android:textColor="@color/gray_medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_add_task"
                    set_hide="@{!viewModel.taskValidate}"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/ed_description"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="120dp"
                    android:background="@drawable/bg_btn"
                    android:fontFamily="@font/imbplexsans_medium"
                    android:gravity="center"
                    android:text="Thêm mới"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>