<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_tool_bar"
        android:paddingTop="58dp">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/ic_back_white"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/imbplexsans_medium"
            android:gravity="center_vertical"
            android:text="Thông tin ngân hàng"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Chọn ngân hàng"
        android:textColor="@color/gray_medium"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/layout_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_ed_search_task"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2" />

        <EditText
            android:id="@+id/ed_bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/un_color"
            android:padding="10dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imv_drop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_bank"
        android:background="@color/white"
        android:elevation="10dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <TextView
        android:id="@+id/tv_bank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_bank"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Số tài khoản"
        android:textColor="@color/gray_medium"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ed_account_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bank_num"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_ed_search_task"
        android:hint="Nhập số tài khoản"
        android:inputType="number"
        android:maxLength="19"
        android:padding="10dp"
        android:textColor="@color/gray_medium"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_check_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ed_account_number"
        android:layout_alignBottom="@+id/ed_account_number"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_green_light_rd_8"
        android:gravity="center"
        android:padding="10dp"
        android:text="Kiểm tra"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_account_number"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Tên tài khoản"
        android:textColor="@color/gray_medium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bank_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_ed_search_task"
        android:padding="10dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_account_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn"
        android:padding="10dp"
        android:text="Lưu thông tin "
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>