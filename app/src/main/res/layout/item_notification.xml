<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_history"
        android:drawablePadding="5dp"
        android:gravity="end"
        android:paddingEnd="5dp"
        android:text="10 phút trước"
        android:textColor="@color/gray_medium"
        android:textSize="10sp"
        tools:ignore="SmallSp,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/time"
        android:text="Bạn vừa nhận được 1 nhiệm vụ mới"
        android:textColor="@color/gray_primary"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginBottom="5dp"
        android:text="Dọn kho"
        android:textColor="@color/gray_medium"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#22AFAFAF" />
</RelativeLayout>